@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix mlc: <http://example.org/mlc#> .
@prefix ex: <http://example.org/shapes#> .

# Shape to detect conferral failure (Type 1)
ex:ConferralFailureShape a sh:NodeShape ;
  sh:targetClass mlc:MLCRecord ;
  sh:property [
    sh:path mlc:authority / mlc:valid ;
    sh:datatype xsd:boolean ;
    sh:hasValue true ;
    sh:message "Type 1: Conferral Failure – authority is not valid." ;
  ] ;
  sh:severity sh:Violation .

# Shape to detect jurisdictional contradiction (Type 2)
ex:JurisdictionFailureShape a sh:NodeShape ;
  sh:targetClass mlc:MLCRecord ;
  sh:property [
    sh:path mlc:jurisdiction / mlc:withinScope ;
    sh:datatype xsd:boolean ;
    sh:hasValue true ;
    sh:message "Type 2: Jurisdictional Contradiction – event outside jurisdiction." ;
  ] ;
  sh:severity sh:Violation .

